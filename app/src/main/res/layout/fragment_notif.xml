<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/heading"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_notif"
            android:id="@+id/homeIcon"
            android:layout_centerVertical="true"
            app:tint="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/homeIcon"
            android:text="Notifications"
            android:textSize="20dp"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="34dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/bg_border"
        android:entries="@array/members"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="563dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner5"
        tools:layout_editor_absoluteX="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardBackgroundColor="#E0DFDF"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FDF6F6"
                    android:foreground="@drawable/bg_border"
                    android:gravity="start"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0"
                        app:srcCompat="@android:drawable/ic_menu_info_details" />
                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:lineSpacingExtra="8sp"
                        android:paddingTop="15dp"
                        android:textAlignment="textStart"
                        android:textColor="#070707"
                        tools:text="PT 1 - GEACMX01\nShort Essay\nDue Today, 11:59 PM" />
                    <Button
                        android:id="@+id/button3"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="#473939"
                        android:visibility="visible"
                        app:icon="@android:drawable/btn_dialog"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardBackgroundColor="#E0DFDF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FDF6F6"
                    android:foreground="@drawable/bg_border"
                    android:gravity="start"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0"
                        app:srcCompat="@android:drawable/ic_menu_info_details" />
                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:lineSpacingExtra="8sp"
                        android:paddingTop="15dp"
                        android:textAlignment="textStart"
                        android:textColor="#070707"
                        tools:text="CTAPDEVL\nRoom 401\n1:00 PM - 3:40 PM | Tues" />
                    <Button
                        android:id="@+id/button4"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="#473939"
                        android:visibility="visible"
                        app:icon="@android:drawable/btn_dialog" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>