<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:id="@+id/header">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_logo"
            android:id="@+id/logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Syncly"
            android:textSize="44dp"
            android:textStyle="bold|italic"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="“An app for students, made by students”"
        android:textSize="16dp"
        android:layout_marginBottom="80dp"
        android:layout_below="@id/header"
        android:id="@+id/quote"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_below="@id/quote">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:columnCount="2"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/black"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="5dp"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/feat_allinone"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All-in-One"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/black"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="5dp"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/feat_commcollab"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collab &amp; Communicate"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="@color/black"
            android:layout_height="132dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/feat_time"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Master Time"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        app:cornerRadius="10dp"
        android:text="Get Started"
        android:backgroundTint="@color/light_blue"
        android:textSize="16dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/startBtn"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>