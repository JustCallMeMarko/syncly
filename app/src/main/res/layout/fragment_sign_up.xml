<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SignUp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textSize="36dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="10dp"
        android:id="@+id/errorCard"
        android:visibility="invisible"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incorrect email/password"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:padding="6dp"
            android:id="@+id/errorMsg"
            android:background="@color/pink"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:cardCornerRadius="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/errorCard"
        android:id="@+id/username"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:id="@+id/usernameInpt"
            android:hint="Username"
            android:paddingLeft="20dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:cardCornerRadius="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/username"
        android:id="@+id/email"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:id="@+id/emailInpt"
            android:hint="Email"
            android:paddingLeft="20dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:cardCornerRadius="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/email"
        android:id="@+id/pass"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:id="@+id/passInpt"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:cardCornerRadius="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/pass"
        android:id="@+id/confirmpass"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:id="@+id/confirmpassInpt"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            />
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        android:text="Sign Up"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:id="@+id/signupBtn"
        android:layout_below="@id/confirmpass"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/signupBtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/or"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:layout_marginRight="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:id="@+id/login"
            android:padding="10dp"
            android:text="Login"/>
    </LinearLayout>
</RelativeLayout>